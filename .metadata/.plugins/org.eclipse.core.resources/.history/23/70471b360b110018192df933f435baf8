package demo;
public class NextGreatestElement {
	
	public static Node nextGreatestElement(Node head) {
		if(head.next == null) {
			head.val = -1;
			return head;
		}
		head.val = Math.max(head.next.val, nextGreatestElement(head.next).val);
		return head;
		
	}
	
	public static void printLinkedList(Node head) {
		while(head!=null) {
			if(head.next == null) {
				System.out.print(head.val+"\n");
			}	
			else {
				System.out.print(head.val + " -> ");
			}
			head = head.next;
		}
	}
	
	public static void main(String[] args) {
		Node node1 = new Node(3);
		Node node2 = new Node(10);
		Node node3 = new Node(7);
		Node node4 = new Node(3);
		Node node5 = new Node(4);
		Node node6 = new Node(1);
		node1.next = node2;
		node2.next = node3;
		node3.next = node4;
		node4.next = node5;
		node5.next = node6;
		
		printLinkedList(node1);                      // before: 3 -> 10 -> 7 -> 3 -> 4 -> 1
		printLinkedList(nextGreatestElement(node1)); // after: 10 -> 7 -> 4 -> 4 -> 1 -> -1	
	}
}

class Node {
	int val;
	Node next;
	
	public Node(int val) {
		this.val = val;
	}	
}
